!!!
%html
  %head
    %title MastercardLounge
    = stylesheet_link_tag    'admin', media: 'all'
    = javascript_include_tag 'admin'
    = csrf_meta_tags

  %body.admin
    = render 'header'
    .container
      - if notice.present?
        .alert.alert-success{ role: 'alert' }= notice

      - if alert.present?
        .alert.alert-danger{ role: 'alert' }= alert

      = yield